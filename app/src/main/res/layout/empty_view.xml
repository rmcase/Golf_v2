<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/golf_course">

    <com.ryancase.golf.Helpers.TextViewCust
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:theme="@style/TitleText"
        android:textSize="30pt"
        android:textColor="@color/newGreen"
        android:id="@+id/emptyTitle"
        android:layout_gravity="center"/>

    <com.ryancase.golf.Helpers.TextViewCust
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:text="No Rounds Played"
        android:textColor="@color/yellow"
        android:id="@+id/textView"
        android:background="@color/grey55"
        android:layout_below="@+id/emptyTitle"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center" />
</LinearLayout>
