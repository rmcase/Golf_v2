              android:textColor="@color/yellow"
              android:textSize="13pt"
              android:id="@+id/historyBirdies"/>
      </TableRow>
      <!--END 4TH ROW -->

      <!--SPACER ROW -->
      <TableRow
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="@color/whiteOP">

          <TextView
              android:layout_width="0px"
              android:layout_height="20px"
              android:layout_weight="1"
              android:paddingTop="15px"
              android:paddingBottom="15px"/>
      </TableRow>
      <!--SPACER ROW -->

      <!--5th ROW -->
      <TableRow
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="@color/green75">

          <TextView
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:text="Eagles:"
              android:layout_weight="3"
              android:textAlignment="center"
              android:textColor="@color/black"
              android:textSize="13pt"
              android:paddingLeft="10px"
              android:id="@+id/eagleHeaderH"/>
          <TextView
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textColor="@color/yellow"
              android:textSize="13pt"
              android:id="@+id/historyEagles"/>

          <!-- space -->
          <TextView
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="1"/>
          <!-- end space -->

          <TextView
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:text="Other:"
              android:layout_weight="3"
              android:textAlignment="center"
              android:textColor="@color/black"
              android:textSize="13pt"
              android:paddingLeft="10px"
              android:id="@+id/otherHeaderH"/>
          <TextView
              android:layout_width="0px"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textColor="@color/yellow"
              android:textSize="13pt"
              android:id="@+id/historyOther"/>

      </TableRow>
      <!--END 5th ROW -->

    <!--BUTTON ROW-->
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

      <Button
          android:layout_marginTop="200px"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Return to Round List"
          android:id="@+id/returnToRoundList"
          android:layout_weight="1"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:textColor="@color/white"
          android:background="@drawable/next_bg" />
    </TableRow>
  </TableLayout>
</LinearLayout>