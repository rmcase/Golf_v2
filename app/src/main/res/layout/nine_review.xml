                android:paddingBottom="15px"/>
            <!-- end space -->
        </TableRow>
        <!--SPACER ROW -->

        <!--5th ROW -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green75">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Eagles:"
                android:layout_weight="3"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13pt"
                android:paddingLeft="10px"
                android:id="@+id/eagleHeader"/>
            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:textSize="13pt"
                android:id="@+id/eaglesAtt"/>

            <!-- space -->
            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <!-- end space -->

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Other:"
                android:layout_weight="3"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13pt"
                android:paddingLeft="10px"
                android:id="@+id/otherHeader"/>
            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:textSize="13pt"
                android:id="@+id/otherAtt"/>

        </TableRow>
        <!--END 5th ROW -->


        <!--BUTTON ROW -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <Button
                android:layout_marginTop="50dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Finish Round"
                android:id="@+id/finishAtTheTurn"
                android:layout_weight="6"
                android:textColor="@color/white"
                android:background="@drawable/next_bg" />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <Button
                android:layout_marginTop="50dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Continue Round"
                android:id="@+id/continueRound"
                android:layout_weight="6"
                android:textColor="@color/white"
                android:background="@drawable/next_bg" />
        </TableRow>

    </TableLayout>
</LinearLayout>