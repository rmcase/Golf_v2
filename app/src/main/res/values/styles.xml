<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Checkbox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">75px</item>
    </style>

    <style name="NumberPicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Black</item>
    </style>

    <style name="Widget.EditText.Black" parent="@android:style/Widget.EditText">
        <item name="android:textSize">120px</item>
    </style>

    <style name="YourTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarTabStyle">@style/tab_nav</item>
        <item name="android:actionBarSize">50dp</item>
    </style>

    <style name="tab_nav" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:showDividers">middle</item>
        <!-- give your divider here -->
        <item name="android:divider">@drawable/tabindicator</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

</resources>
